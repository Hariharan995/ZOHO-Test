import java.util.*;
import java.io.*;
public class Main
{
	public static void main(String[] args) {
	   Scanner s=new Scanner(System.in);
	   int n=s.nextInt(),v=1;
	   for(int i=1;i<=n;i++)
	   {   int sp=n-i,j=i;
	       while(sp>0){
	       System.out.print(" ");sp--;}
	       while(j>0)
	       {
	           System.out.print(v);
	           v++;j--;
	       }
	       System.out.println();
	   }
	   
	}
}
